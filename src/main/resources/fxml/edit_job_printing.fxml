<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane
    xmlns="http://javafx.com/javafx/23"
    xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.PrintingTabController"
    fitToWidth="true"
    styleClass="tab-scroll">

    <content>
        <HBox spacing="16" styleClass="tab-container">

            <!-- ========= LEFT : TABLE ========= -->


            <VBox styleClass="table-wrapper" HBox.hgrow="ALWAYS"  prefWidth="650">

        <TableView fx:id="printingTable" styleClass="data-table">

            <columns>
                 <TableColumn fx:id="statusCol"  text="Status" prefWidth="110"/>

                <TableColumn fx:id="qtyCol" text="Qty" prefWidth="80"/>
                <TableColumn fx:id="unitsCol" text="Units" prefWidth="110"/>
                <TableColumn fx:id="setsCol" text="Sets"/>
                <TableColumn fx:id="colorCol" text="Color"/>
                <TableColumn fx:id="sideCol" text="Side"/>
                <TableColumn fx:id="ctpCol" text="CTP"/>
                <TableColumn fx:id="notesCol" text="Notes"/>

                <TableColumn fx:id="amountCol" text="Amount"/>
            </columns>
 
        </TableView>

    </VBox>
    
    <!-- ================= RIGHT : EDIT PANEL ================= -->

    <!-- ================= Printing Specification ================= -->
  <VBox styleClass="editor-panel"
      spacing="18"
      fx:id="rightPane"
      prefWidth="350">

    <!-- Header -->
    <Label text="Printing Editor" styleClass="card-title"/>

    <!-- Quantity -->
  

    <!-- Compact row: Units + Sets -->
    <FlowPane hgap="14"
              vgap="14"
              prefWrapLength="350">
  <VBox spacing="6">
        <Label text="Quantity"/>
        <TextField fx:id="qtyField"/>
    </VBox>
        <VBox spacing="6">
            <Label text="Units"/>
            <ComboBox fx:id="unitsField"/>
        </VBox>

        <VBox spacing="6" >
            <Label text="Sets"/>
            <TextField fx:id="setsField"/>
        </VBox>

   

        <VBox spacing="6" >
            <Label text="Color"/>
            <ComboBox fx:id="colorField"/>
        </VBox>

    
    <HBox spacing="16" alignment="CENTER_LEFT">
    <VBox spacing="4">
        <Label text="Side"/>
        <ComboBox fx:id="sideField"/>
    </VBox>

    <VBox spacing="10"> <!-- spacer to match ComboBox height -->
            <Label />

        <CheckBox fx:id="ctpCheckBox" text="With CTP"/>
    </VBox>
</HBox>



</FlowPane>
    <!-- Notes -->
    <VBox spacing="6">
        <Label text="Notes"/>
        <TextArea fx:id="notesField"
                  prefRowCount="3"
                  wrapText="true"/>
    </VBox>

    <!-- Amount -->
    <VBox spacing="6">
        <Label text="Amount (â‚¹)"/>
        <TextField fx:id="amountField"/>
    </VBox>
    
    
<HBox spacing="10" HBox.hgrow="ALWAYS">

    <!-- Action -->
    <Button fx:id="addUpdateBtn"
            text="Add Printing"
            maxWidth="Infinity"
            HBox.hgrow="ALWAYS"
            styleClass="btn-primary"
            onAction="#handleAddOrUpdate"/>

	 <Button fx:id="deleteBtn"
            text="Delete"
            maxWidth="Infinity"
            HBox.hgrow="ALWAYS"
            onAction="#handleDelete"
            visible="false"
            managed="false"
            styleClass="btn-danger"/>
 </HBox>   
            
</VBox>



</HBox>
</content>
</ScrollPane>

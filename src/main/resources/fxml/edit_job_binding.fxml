<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<ScrollPane
    xmlns="http://javafx.com/javafx/23"
    xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="controller.BindingTabController"
    fitToWidth="true"
    styleClass="tab-scroll">

    <content>
        <HBox spacing="16" styleClass="tab-container" >


    <!-- ===== LEFT TABLE ===== -->
 		<VBox fx:id="leftPane" styleClass="table-wrapper"
          HBox.hgrow="ALWAYS"
          prefWidth="650">
        <TableView fx:id="bindingTable">

            <columns>
                <TableColumn fx:id="processCol" text="Process"/>
                <TableColumn fx:id="qtyCol" text="Qty"/>
                <TableColumn fx:id="rateCol" text="Rate"/>
                <TableColumn fx:id="notesCol" text="Notes"/>
            	<TableColumn fx:id="amountCol" text="Amount"/>

            </columns>

        </TableView>

        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Items:"/>
            <Label fx:id="itemCountLabel" text="0"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Total:"/>
            <Label fx:id="totalAmountLabel"
                   text="â‚¹0.00"
                   styleClass="amount-highlight"/>
        </HBox>

    </VBox>

    <!-- ===== RIGHT PANEL (future editor) ===== -->
   <!-- ===== RIGHT PANEL : BINDING EDITOR ===== -->
     <VBox fx:id="rightPane"
                  styleClass="editor-panel"
                  spacing="12"
                  prefWidth="350">

                <Label text="Binding Editor"
                       styleClass="card-title"/>
                       
<FlowPane
    hgap="12"
    vgap="12"
    prefWrapLength="330">		
                <VBox spacing="4" prefWidth="120">
                    <Label text="Process"/>
                    <ComboBox fx:id="processField"
                              promptText="Binding Process"/>
                </VBox>

                <VBox spacing="4" prefWidth="80">
                    <Label text="Quantity"/>
                    <TextField fx:id="qtyField"/>
                </VBox>

                <VBox spacing="4" prefWidth="90">
                    <Label text="Rate"/>
                    <TextField fx:id="rateField"/>
                </VBox>
	</FlowPane>
                <VBox spacing="4">
                    <Label text="Notes"/>
                    <TextArea fx:id="notesField"
                              prefRowCount="3"/>
                </VBox>

                <VBox spacing="4">
                    <Label text="Amount"/>
                    <TextField fx:id="amountField"/>
                </VBox>

                <Button fx:id="addUpdateBtn"
                        text="Add Binding"
                        maxWidth="Infinity"
                        styleClass="btn-primary"
                        onAction="#handleAddOrUpdate"/>
            </VBox>

</HBox>

</content>
</ScrollPane>

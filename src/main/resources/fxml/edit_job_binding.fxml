<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<ScrollPane
    xmlns="http://javafx.com/javafx/23"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="controller.BindingTabController"
    fitToWidth="true"
    styleClass="table-scroll">

    <content>
        <HBox spacing="16" styleClass="tab-container">

            <!-- ================= LEFT : TABLE ================= -->
            <VBox styleClass="table-wrapper"
                  HBox.hgrow="ALWAYS"
                  prefWidth="650">

                <TableView fx:id="bindingTable"
                           styleClass="data-table">

                    <columns>
                        <TableColumn fx:id="statusCol" text="Status" prefWidth="90"
             minWidth="80"
             maxWidth="100"/>

                        <TableColumn fx:id="processCol" text="Process" prefWidth="100"/>
                        <TableColumn fx:id="qtyCol" text="Qty" prefWidth="80"/>
                        <TableColumn fx:id="rateCol" text="Rate" prefWidth="90"/>
                        <TableColumn fx:id="notesCol" text="Notes" prefWidth="140"/>
                        <TableColumn fx:id="amountCol" text="Amount" prefWidth="120"/>
                    </columns>

                </TableView>

            </VBox>

            <!-- ================= RIGHT : BINDING EDITOR ================= -->
            <VBox styleClass="editor-panel"
                  spacing="18"
                  fx:id="rightPane"
                  prefWidth="350">

                <Label text="Binding Editor"
                       styleClass="card-title"/>

              <!-- MAIN GRID -->
<FlowPane hgap="14"
          vgap="14"
          prefWrapLength="350">

    <VBox spacing="6" prefWidth="150">
        <Label text="Process"/>
        <ComboBox fx:id="processField"
                  promptText="Binding Process"/>
    </VBox>

    <VBox spacing="6" prefWidth="70">
        <Label text="Quantity"/>
        <TextField fx:id="qtyField"/>
    </VBox>

    <VBox spacing="6" prefWidth="50">
        <Label text="Rate"/>
        <TextField fx:id="rateField"
                   />
    </VBox>

</FlowPane>

                <VBox spacing="6">
                    <Label text="Notes"/>
                    <TextArea fx:id="notesField"
                              prefRowCount="3"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Amount (â‚¹)"/>
                    <TextField fx:id="amountField"/>
                </VBox>

                <!-- ACTION BUTTONS -->
                <HBox spacing="10" HBox.hgrow="ALWAYS">

                    <Button fx:id="addUpdateBtn"
                            text="Add Binding"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            styleClass="btn-primary"
                            onAction="#handleAddOrUpdate"/>

                    <Button fx:id="deleteBtn"
                            text="Delete"
                            maxWidth="Infinity"
                            HBox.hgrow="ALWAYS"
                            onAction="#handleDelete"
                            visible="false"
                            managed="false"
                            styleClass="btn-danger"/>

                </HBox>

</VBox>
        </HBox>
    </content>
</ScrollPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LaminationTabController"
      spacing="16"
      styleClass="tab-container">

    <!-- ========= LEFT : TABLE ========= -->
    <VBox styleClass="table-wrapper" HBox.hgrow="ALWAYS">

        <TableView fx:id="laminationTable"
                   styleClass="data-table">

            <columns>
                <TableColumn fx:id="qtyCol" text="Qty"/>
                <TableColumn fx:id="unitCol" text="Unit"/>
                <TableColumn fx:id="typeCol" text="Type"/>
                <TableColumn fx:id="sideCol" text="Side"/>
                <TableColumn fx:id="sizeCol" text="Size"/>
                <TableColumn fx:id="amountCol" text="Amount"/>
            </columns>

        </TableView>

        <HBox styleClass="table-footer">
            <Label text="Items:"/>
            <Label fx:id="itemCount" text="0"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Total:"/>
            <Label fx:id="totalAmount"
                   text="â‚¹0.00"
                   styleClass="amount-highlight"/>
        </HBox>

    </VBox>

    <!-- ========= RIGHT : EDIT PANEL ========= -->
    <VBox styleClass="editor-panel">

        <VBox styleClass="editor-card">
            <Label text="Lamination Details"
                   styleClass="card-title"/>

            <TextField promptText="Quantity"/>
            <ComboBox promptText="Unit"/>
            <ComboBox promptText="Lamination Type"/>
            <ComboBox promptText="Side"/>
            <TextField promptText="Size"/>
            <TextArea promptText="Notes" prefRowCount="3"/>
        </VBox>

        <Button text="+ Add / Update Lamination"
                styleClass="btn-primary"
                maxWidth="Infinity"/>

    </VBox>

</HBox>

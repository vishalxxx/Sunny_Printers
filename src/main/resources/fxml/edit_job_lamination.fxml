<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<ScrollPane
    xmlns="http://javafx.com/javafx/23"
    xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LaminationTabController"
    fitToWidth="true"
    styleClass="tab-scroll">

    <content>
        <HBox spacing="16" styleClass="tab-container">


    <!-- ========= LEFT : TABLE ========= -->
    <VBox styleClass="table-wrapper" HBox.hgrow="ALWAYS" prefWidth="650">

        <TableView fx:id="laminationTable"
                   styleClass="data-table">

            <columns>
                <TableColumn fx:id="qtyCol" text="Qty"/>
                <TableColumn fx:id="unitCol" text="Unit"/>
                <TableColumn fx:id="typeCol" text="Type"/>
                <TableColumn fx:id="sideCol" text="Side"/>
                <TableColumn fx:id="sizeCol" text="Size"/>
                <TableColumn fx:id="notesCol" text="Notes"/>
				<TableColumn fx:id="amountCol" text="Amount"/>
            </columns>

        </TableView>

        <HBox styleClass="table-footer">
            <Label text="Items:"/>
            <Label fx:id="itemCount" text="0"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Total:"/>
            <Label fx:id="totalAmount"
                   text="₹0.00"
                   styleClass="amount-highlight"/>
        </HBox>

    </VBox>

    <!-- ========= RIGHT : EDIT PANEL ========= -->
  <!-- ========= RIGHT : LAMINATION EDITOR ========= -->
<VBox fx:id="rightPane"
                  styleClass="editor-panel"
                  spacing="14"
                  prefWidth="350">

                <Label text="Lamination Editor"
                       styleClass="card-title"/>

  <FlowPane hgap="12"
              vgap="12"
             >
              
                <!-- Qty -->
                <VBox spacing="4">
                    <Label text="Quantity"/>
                    <TextField fx:id="qtyField"/>
                </VBox>

                <!-- Unit -->
                <VBox spacing="4">
                    <Label text="Unit"/>
                    <ComboBox fx:id="unitField"/>
                </VBox>

                <!-- Type -->
                <VBox spacing="4">
                    <Label text="Type"/>
                    <ComboBox fx:id="typeField"/>
                </VBox>

                <!-- Side -->
                <VBox spacing="4">
                    <Label text="Side"/>
                    <ComboBox fx:id="sideField"/>
                </VBox>

                <!-- Size -->
                <VBox spacing="4">
                    <Label text="Size"/>
                    <ComboBox fx:id="sizeField"/>
                </VBox>
</FlowPane>
                <!-- Notes -->
                <VBox spacing="4">
                    <Label text="Notes"/>
                    <TextArea fx:id="notesField"
                              prefRowCount="3"/>
                </VBox>

                <!-- Amount -->
                <VBox spacing="4">
                    <Label text="Amount (₹)"/>
                    <TextField fx:id="amountField"/>
                </VBox>

                <Button fx:id="addUpdateBtn"
                        text="Add Lamination"
                        maxWidth="Infinity"
                        styleClass="btn-primary"
                        onAction="#handleAddOrUpdate"/>

            </VBox>


</HBox>
</content>
</ScrollPane>